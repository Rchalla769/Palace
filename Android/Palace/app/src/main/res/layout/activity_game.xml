<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.rohan.games.palace.GameActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal|top"
            android:id="@+id/player2nd">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:id="@+id/thirdCard1"
                android:layout_marginLeft="5dp"
                android:src="@drawable/facedown"
                android:layout_marginTop="10dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:id="@+id/thirdCard2"
                android:layout_marginLeft="10dp"
                android:src="@drawable/facedown"
                android:layout_marginTop="10dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:id="@+id/thirdCard3"
                android:layout_marginLeft="10dp"
                android:src="@drawable/facedown"
                android:layout_marginTop="10dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="53dp"
            android:layout_height="89dp"
            android:id="@+id/firstPile"
            android:layout_gravity="center"
            android:layout_marginRight="130dp"
            android:src="@drawable/spades4"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="53dp"
            android:layout_height="89dp"
            android:id="@+id/secondPile"
            android:layout_gravity="center"
            android:layout_marginRight="110dp"
            android:src="@drawable/spades9"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="53dp"
            android:layout_height="89dp"
            android:id="@+id/thirdPile"
            android:layout_gravity="center"
            android:layout_marginRight="90dp"
            android:src="@drawable/spades5"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="53dp"
            android:layout_height="89dp"
            android:id="@+id/fourthPile"
            android:layout_gravity="center"
            android:layout_marginRight="70dp"
            android:src="@drawable/diamonds8"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="53dp"
            android:layout_height="89dp"
            android:id="@+id/deck"
            android:layout_gravity="center"
            android:layout_marginLeft="110dp"
            android:src="@drawable/facedown" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="77dp"
            android:layout_height="210dp"
            android:layout_gravity="left|top"
            android:id="@+id/player3rd">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:id="@+id/secondCard3"
                android:rotation="90"
                android:layout_marginLeft="10dp"
                android:src="@drawable/facedown" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:id="@+id/secondCard2"
                android:rotation="90"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/facedown" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:id="@+id/secondCard1"
                android:rotation="90"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/facedown" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="77dp"
            android:layout_height="210dp"
            android:layout_gravity="right|top"
            android:id="@+id/player4th">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:id="@+id/fourthCard3"
                android:rotation="90"
                android:layout_marginLeft="10dp"
                android:src="@drawable/facedown" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:id="@+id/fourthCard2"
                android:rotation="90"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/facedown" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:id="@+id/fourthCard1"
                android:rotation="90"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/facedown" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="188dp"
            android:layout_height="90dp"
            android:layout_gravity="left|bottom"
            android:id="@+id/player1st"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:id="@+id/firstCard1"
                android:layout_marginLeft="0dp"
                android:src="@drawable/facedown"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:onClick="onTableCardClicked" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:id="@+id/firstCard2"
                android:layout_marginLeft="10dp"
                android:src="@drawable/facedown"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:onClick="onTableCardClicked" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:id="@+id/firstCard3"
                android:layout_marginLeft="10dp"
                android:src="@drawable/facedown"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:onClick="onTableCardClicked" />
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="271dp"
            android:layout_height="65dp"
            android:id="@+id/handScrollView"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="30dp"
            android:fillViewport="false" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/hand"/>
        </HorizontalScrollView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play"
            android:id="@+id/makeTurnButton"
            android:layout_gravity="bottom|right"
            android:onClick="onPlayGameClick" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Table"
            android:id="@+id/textView4"
            android:layout_gravity="left|bottom"
            android:layout_marginLeft="50dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Hand"
            android:id="@+id/textView5"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginLeft="50dp"
            android:textColor="#ffffff" />

    </FrameLayout>
</RelativeLayout>
